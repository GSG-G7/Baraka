<section>
    {{> header}}
    <form class="home__form" action="/addList" method="POST">
        <input id='addlist' class="home__main__input" type="text" value="" aria-label="input" name="list"
            placeholder="Add new list" required>
        <input id='submit' class="home__main__add" type="submit" value="Add List" aria-label="Add List">
    </form>
    <div class="home__results">
        {{#each result}}
        <div class="home__list">
            <h1 class="list__title"><span hidden>{{this.list_id}}</span>{{this.listname}}</h1>
            
            <form class="list__form" action="/addItem" method="POST">
                <input id='addItemName' class="item__name" type="text" value="" aria-label="input" name="item"
                placeholder="Add new item" required>
                <input id='addItemContent' class="item__content" type="text" value="" aria-label="input" name="item"
                placeholder="Add descripition" required>
                <input id='addItemUser' class="item__user" type="text" value="" aria-label="input" name="item"
                    placeholder="Add user name" required>
                <input id='submit' class="item__add" type="submit" value="Add Item" aria-label="Add Item">
            </form>
            
            {{#each this.list}}
                <h2 class="item__title">{{this.title}}</h2>
                <p class="item__content">{{this.content}}</p>
                <span class="item__user">{{this.username}}</span>
            {{/each}}
            
        </div>
        {{/each}}
    </div>
    {{> footer}}   
</section>